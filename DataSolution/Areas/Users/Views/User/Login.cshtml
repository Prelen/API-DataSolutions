
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center bg-dark" ng-app="LoginApp" ng-controller="LoginController">
    <div class="auth-box bg-dark border-top border-secondary">
        <div id="loginform">
            <div class="text-center p-t-20 p-b-20">
                <span class="db"><img src="~/Assets/images/iDoIT.png" /></span>
            </div>
            <!-- Form -->
            <form class="form-horizontal m-t-20" id="loginform">
                <div class="row p-b-30">
                    <div class="col-12">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            <input type="text" id="username" class="form-control form-control-lg" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" required ng-model="username">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-warning text-white" id="basic-addon2" title="{{ passwordMessage }}" ng-click="showPassword()">
                                <i ng-class="{true: 'fa fa-fw fa-eye field-icon', false: 'fa fa-fw fa-eye-slash field-icon'}[togglePassword === true]"></i>
                                </span>
                            </div>
                            <input type="{{ passwordType }}" id="password" class="form-control form-control-lg" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" required ng-model="password" >
                        </div>
                    </div>
                </div>
                <div class="row border-top border-secondary">
                    <div class="col-12">
                        <div class="form-group">
                            <div class="p-t-20">
                                <button class="btn btn-primary" id="recover" type="button"><i class="fa fa-lock m-r-5"></i> Lost password?</button>
                                <button  ng-class="{true: 'btn btn-success float-right', false: 'btn btn-info float-right'}[showProcessing === true]" type="submit" ng-click="Login()">
                                    <i class="fa fa-spinner fa-spin" ng-show="showProcessing"></i>&nbsp;{{ buttonLoginMessage }}
                                </button>
                                <div role="alert" id="loginMessage" ng-class="{true: 'alert alert-success', false: 'alert alert-danger'}[responseLogin === true]" ng-show="toggleLogin">
                                    <i class="fa fa-spinner fa-spin" ng-show="responseLogin"></i>&nbsp; {{ loginMessage }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div id="recoverform">
            <div class="text-center">
                <span class="text-white">Enter your e-mail address below and we will send you instructions how to recover a password.</span>
            </div>
            <div class="row m-t-20">
                <!-- Form -->
                <form class="col-12" action="index.html">
                    <!-- email -->
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-warning text-white" id="basic-addon1"><i class="ti-email"></i></span>
                        </div>
                        <input type="email" class="form-control form-control-lg" placeholder="Email Address" aria-label="Username" aria-describedby="basic-addon1" ng-model="recoveremail" id="recoverEmail">
                    </div>
                    <!-- pwd -->
                    <div class="row m-t-20 p-t-20 border-top border-secondary">
                        <div class="col-12">
                            <a class="btn btn-success" href="#" id="to-login" name="action">Back To Login</a>
                            <button class="btn btn-info float-right" ng-class="{true: 'btn btn-success float-right', false: 'btn btn-info float-right'}[showProcessing === true]" type="button" name="action" ng-click="recoverPassword()" ng-disabled="showProcessing">
                                <i class="fa fa-spinner fa-spin" ng-show="showProcessing"></i>&nbsp;{{buttonMessage}}
                            </button>
                            <div role="alert" id="recoverMessage" ng-class="{true: 'alert alert-success', false: 'alert alert-danger'}[responseRecover === true]" ng-show="toggleRecoverMessage">{{ responseMessage }}</div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-route.min.js"></script>
<script src="~/Areas/Users/Scripts/LoginController.js"></script>
