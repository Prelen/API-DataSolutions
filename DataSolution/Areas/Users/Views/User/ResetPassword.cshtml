
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>Reset Password</h2>
<div class="auth-wrapper d-flex no-block justify-content-center align-items-center bg-dark" ng-app="ResetPasswordApp" ng-controller="ResetPasswordController">
    <div class="auth-box bg-dark border-top border-secondary">
        <div id="loginform">
            <div class="text-center p-t-20 p-b-20">
                <span class="db"><img src="~/Assets/images/iDoIT.png" /></span>
            </div>
            <!-- Form -->
            <form class="form-horizontal m-t-20" id="loginform">
                <div class="row p-b-30">
                    <div class="col-12">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-info text-white" id="basic-addon1"><i class="ti-pencil"></i></span>

                            </div>
                            <input type="text" id="username" class="form-control form-control-lg" placeholder="Username" aria-label="Old Password" aria-describedby="basic-addon1" required ng-model="username">

                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-success text-white" id="basic-addon2"><i class="ti-pencil-alt2"></i></span>
                            </div>
                            <input type="password" id="password" class="form-control form-control-lg" placeholder="Password" aria-label="New Password" aria-describedby="basic-addon1" required ng-model="password">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-success text-white" id="basic-addon2"><i class="ti-pencil-alt2"></i></span>
                            </div>
                            <input type="password" id="password" class="form-control form-control-lg" placeholder="Password" aria-label="Confirm Password" aria-describedby="basic-addon1" required ng-model="password">

                        </div>
                    </div>
                </div>
                <div class="row border-top border-secondary">
                    <div class="col-12">
                        <div class="form-group">
                            <div class="p-t-20">
                                <button class="btn btn-info" id="recover" type="button"><i class="fa fa-lock m-r-5"></i> Lost password?</button>
                                <button class="btn btn-success float-right" type="submit" ng-click="Login()">
                                    <i class="fa fa-spinner fa-spin" ng-show="showProcessing"></i>&nbsp;{{ buttonLoginMessage }}
                                </button>
                                <div role="alert" id="loginMessage" ng-class="{true: 'alert alert-success', false: 'alert alert-danger'}[responseLogin === true]" ng-show="toggleLogin">
                                    <i class="fa fa-spinner fa-spin" ng-show="responseLogin"></i>&nbsp; {{ loginMessage }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <script src="~/Scripts/angular.min.js"></script>
        <script src="~/Scripts/angular-route.min.js"></script>
        <script src="~/Areas/Users/Scripts/ResetPasswordController.js"></script>
