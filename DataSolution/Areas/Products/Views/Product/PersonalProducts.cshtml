
@{
    
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Personal Products</h2>
<form ng-app="DataSolutionApp" ng-controller="PersonalProductController" ng-init="pageLoad()">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label" for="reporttype">Select a report:</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="reporttype" ng-change="reportChange()" ng-model="reportType" ng-options="rep.reportID as rep.reportName for rep in reports">
                                <option value="0">Select a Report</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-body" ng-show="consumerprofile">
                        <h4 class="card-header">Consumer Profile</h4>
                        <div class="form-group row">
                            <label class="col-sm-3 text-right control-label col-form-label" for="fname">First Name:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="fname" type="text" placeholder="First Name" required ng-model="firstname">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="sname">Surame:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="sname" type="text" placeholder="Surname" required ng-model="surname">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="sname">ID Number:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="sname" type="text" placeholder="ID Number" required ng-model="idNumber">
                            </div>
                        </div>
                    </div>
                    <div class="card-body" ng-show="consumerprofileaddress">
                        <h4 class="card-header">Consumer Profile (with address)</h4>
                        <div class="form-group row">
                            <label class="col-sm-3 text-right control-label col-form-label" for="fname">First Name:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="fname" type="text" placeholder="First Name" required ng-model="firstname">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="sname">Surname:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="sname" type="text" placeholder="Surname" required ng-model="surname">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="sname">ID Number:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="sname" type="text" placeholder="ID Number" required ng-model="idNumber">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="address1">Address Line 1:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="address1" type="text" placeholder="Address Line 1" required ng-model="address1">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="address2"></label>
                            <div class="col-sm-9">
                                <input class="form-control" id="address2" type="text" placeholder="Address Line 2" ng-model="address2">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="suburb">Suburb:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="suburb" type="text" placeholder="Suburb" ng-model="suburb">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="city">City:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="city" type="text" placeholder="City" required ng-model="city">
                            </div>
                            <label class="col-sm-3 text-right control-label col-form-label" for="province" >Province:</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="province" ng-model="selectedProvince" ng-options="prov.provinceCode as prov.provinceName for prov in provinces">
                                    <option value="0">Select a province</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card-body" ng-show="personaltrace">
                        <h4 class="card-header">Personal Trace</h4>
                        <div class="form-group row">
                            <label class="col-sm-3 text-right control-label col-form-label" for="idnumber">ID Number:</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="idnumber" type="text" placeholder="ID Number" required ng-model="idNumber">
                            </div>
                        </div>
                    </div>
                    <div class="row border-top" ng-show="showButton">
                        <div class="col-12">
                            <div class="p-t-20">
                                <button ng-class="{true: 'btn btn-lg btn-success', false: 'btn  btn-lg btn-info'}[isProcessing === true]" type="button" ng-click="callProduct();">
                                    <i class="fa fa-spinner fa-spin" ng-show="isProcessing"></i>&nbsp;{{buttonText}}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
  </div>
</form>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-route.min.js"></script>
<script src="~/Areas/Products/Scripts/PersonalProductController.js"></script>

